class Solution {
public:
    int maxProfit(vector<int>& prices) {

        // Stores the minimum price seen so far
        int min_price = prices[0];

        // Stores the maximum profit
        int profit = 0;

        // Traverse prices starting from day 1
        for(int i = 1; i < prices.size(); i++)
        {
            // Current day's price
            int curr_price = prices[i];

            // Profit if sold today
            int curr_profit = curr_price - min_price;

            // Update maximum profit
            profit = max(profit, curr_profit);

            // Update minimum price if lower price is found
            if(min_price > curr_price)
            {
                min_price = curr_price;
            }
        }

        // Return the maximum profit
        return profit;
    }
};
